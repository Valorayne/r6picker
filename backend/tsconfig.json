{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./lib",
    "rootDirs": [
      "./src",
      "../shared"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
